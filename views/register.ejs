<%- include('./partials/header.ejs'); -%>
<div class="container2" id="bodyid2">
    
</div>


<div id="thegrid" class="gridcontainer">
    <form class="regform" action="/users/register" method="POST">
        <% if(typeof errors !== 'undefined'){ %>
            <% errors.forEach( error => {%>
                <li id="errormessage"><%= error.message %> </li>
            <% }) %> 
        <% } %> 
        <label for="username" id="regusername" class="formlabel">Username</label>
        <input class="forminput" type="text" name="username" placeholder="Enter your Username" />
        <label for="email" class="formlabel">Email</label>
        <input class="forminput" type="email" name="email" placeholder="Enter your email" />
        <label  for="password" class="formlabel">Password</label>
        <input class="forminput" type="password" name="password" placeholder="Enter your password" autocomplete="off" />
        <input class="formsubmit" type="submit" value="Sign Up" name="submit">
        <a id="alreadymembers" href="/users/loginform">Already registered? Login here</a>
    </form>

</div>

